<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:paddingHorizontal="16dp">

    <!-- Круговая диаграмма (по умолчанию видима) -->
    <com.example.expensesandincomemanager.ui.components.DoughnutChartView
        android:id="@+id/doughnut_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <!-- Столбчатая диаграмма (по умолчанию скрыта) -->
    <com.example.expensesandincomemanager.ui.components.BarChartView
        android:id="@+id/bar_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Всего"
            android:textSize="14sp"
            android:textColor="@color/on_surface_variant" />

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginVertical="4dp" />

        <View
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:background="@color/outline"
            android:alpha="0.3"
            android:layout_marginVertical="4dp" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="normal" />

    </LinearLayout>

</FrameLayout>