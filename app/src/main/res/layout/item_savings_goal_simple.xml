<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@drawable/card_stroke_selector"
    app:strokeWidth="1dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Заголовок с иконкой -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Иконка цели -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_savings"
                android:tint="@color/primary"
                android:layout_marginEnd="12dp" />

            <!-- Название цели -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvGoalName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Цель накопления"
                    android:textColor="@color/on_surface"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Статус цели -->
                <TextView
                    android:id="@+id/tvGoalStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="В процессе"
                    android:textColor="@color/success"
                    android:textSize="12sp"
                    android:background="@drawable/status_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Прогресс-бар -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvProgressPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/primary"
                    android:progressBackgroundTint="@color/outline"
                    android:minHeight="10dp"
                    app:trackCornerRadius="5dp" />

            </LinearLayout>

            <!-- Прогресс текст -->
            <TextView
                android:id="@+id/tvRemainingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Осталось: 0 ₽"
                android:textColor="@color/on_surface_variant"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Инфо блок с суммами -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/info_background"
            android:gravity="center_vertical">

            <!-- Текущая сумма -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Накоплено"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="11sp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvCurrentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 ₽"
                    android:textColor="@color/success"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Разделитель -->
            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="@color/outline"
                android:layout_marginHorizontal="8dp" />

            <!-- Целевая сумма -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Цель"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="11sp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvTargetAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 ₽"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Разделитель -->
            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="@color/outline"
                android:layout_marginHorizontal="8dp" />

            <!-- Дата цели -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Срок"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="11sp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvTargetDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--.--.----"
                    android:textColor="@color/on_surface"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Кнопки действий (скрытые по умолчанию, появляются при долгом нажатии) -->
        <LinearLayout
            android:id="@+id/actionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Изменить"
                android:textSize="12sp"
                app:icon="@drawable/ic_edit"
                app:iconTint="@color/primary"
                app:iconPadding="0dp"
                app:iconSize="16dp"
                app:backgroundTint="@color/surface"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Удалить"
                android:textSize="12sp"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/error"
                app:iconPadding="0dp"
                app:iconSize="16dp"
                app:backgroundTint="@color/surface"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>