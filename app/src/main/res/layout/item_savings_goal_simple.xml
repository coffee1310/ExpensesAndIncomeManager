<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="12dp"
    android:backgroundTint="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок с кнопками действий -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvGoalName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Цель накопления"
                android:textColor="@color/on_surface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddMoney"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="+"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/success"
                    app:cornerRadius="18dp"
                    app:tint="@android:color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEdit"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="✏"
                    android:textSize="14sp"
                    app:backgroundTint="@color/outline"
                    app:cornerRadius="18dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="×"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/error"
                    app:cornerRadius="18dp"
                    app:tint="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

        <!-- Дата цели -->
        <TextView
            android:id="@+id/tvTargetDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата цели"
            android:textColor="@color/on_surface_variant"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Суммы -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Целевая сумма"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvTargetAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 ₽"
                    android:textColor="@color/on_surface"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/outline" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Накоплено"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvCurrentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 ₽"
                    android:textColor="@color/on_surface"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Оставшаяся сумма -->
        <TextView
            android:id="@+id/tvRemainingAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Осталось: 0 ₽"
            android:textColor="@color/on_surface_variant"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <!-- Прогресс-бар и процент -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/primary" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>