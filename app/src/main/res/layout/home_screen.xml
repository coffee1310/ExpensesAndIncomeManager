<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Панель выбора типа диаграммы -->
        <LinearLayout
            android:id="@+id/chart_type_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Визуализация"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_pie_chart"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chart_pie"
                    android:tint="@color/on_surface" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_bar_chart"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chart_bar"
                    android:tint="@color/on_surface" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Выбор месяца -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp">

            <LinearLayout
                android:id="@+id/month_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp" />

        </HorizontalScrollView>

        <!-- Контейнер для диаграмм -->
        <include
            layout="@layout/pie_chart_view"
            android:id="@+id/pie_chart_container"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="8dp" />

        <!-- Легенда категорий -->
        <LinearLayout
            android:id="@+id/category_legend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>