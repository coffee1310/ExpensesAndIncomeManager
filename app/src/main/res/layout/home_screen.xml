<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Панель выбора типа диаграммы -->
        <LinearLayout
            android:id="@+id/chart_type_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_pie_chart"
                style="@style/ChartTypeButton"
                app:cardBackgroundColor="@color/surface"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chart_pie"
                    android:tint="@color/on_surface" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_bar_chart"
                style="@style/ChartTypeButton"
                app:cardBackgroundColor="@color/surface"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp"
                android:layout_marginStart="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chart_bar"
                    android:tint="@color/on_surface" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Выбор месяца -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">

            <LinearLayout
                android:id="@+id/month_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp" />

        </HorizontalScrollView>

        <!-- Круговая диаграмма -->
        <include
            layout="@layout/pie_chart_view"
            android:id="@+id/pie_chart_container"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="16dp" />

        <!-- Легенда категорий -->
        <LinearLayout
            android:id="@+id/category_legend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Расходы по категориям"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="16dp" />

            <!-- Категории будут добавляться динамически -->

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>