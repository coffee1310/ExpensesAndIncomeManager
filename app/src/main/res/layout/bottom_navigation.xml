<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_navigation_bar"
    android:paddingTop="12dp"
    android:paddingBottom="36dp"
    android:elevation="8dp">

    <!-- Линейный контейнер для обычных кнопок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp">

        <!-- Операции -->
        <LinearLayout
            android:id="@+id/btn_transactions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_list"
                android:tint="@color/nav_icon_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Операции"
                android:textSize="10sp"
                android:textColor="@color/nav_text_default"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Отчет (главная) -->
        <LinearLayout
            android:id="@+id/btn_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_chart_pie"
                android:tint="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отчет"
                android:textSize="10sp"
                android:textColor="@color/primary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Пустое место для FAB -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- План -->
        <LinearLayout
            android:id="@+id/btn_plan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_calendar"
                android:tint="@color/nav_icon_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="План"
                android:textSize="10sp"
                android:textColor="@color/nav_text_default"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Настройки -->
        <LinearLayout
            android:id="@+id/btn_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_settings"
                android:tint="@color/nav_icon_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Настройки"
                android:textSize="10sp"
                android:textColor="@color/nav_text_default"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- FAB - поверх всего -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:contentDescription="Добавить операцию"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/primary"
        app:elevation="16dp"
        app:tint="@android:color/white" />

</RelativeLayout>